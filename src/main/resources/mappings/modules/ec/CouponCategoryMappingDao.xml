<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.modules.ec.dao.CouponCategoryMappingDao">
	<sql id="sqlColumns">
		coupon_id,
		category_id,
		category_name
	</sql>
	<!-- 	根据id查询 -->
	<select id="couponCateList" resultType="CouponCategoryMapping">
		SELECT
		<include refid="sqlColumns"></include>
		FROM mtmydb.mtmy_coupon_category_mapping
		where coupon_id=#{couponId}
	</select>
	<!-- 	保存知道商品优惠 -->
	<insert id="insertCouponCategoryMapping">
		INSERT INTO mtmydb.mtmy_coupon_category_mapping
		(
		coupon_id,
		category_id,
		category_name
		)
		<foreach collection="list" item="list" separator="union all ">
			SELECT 
				#{list.couponId},#{list.categoryId},#{list.categoryName}
			FROM dual
		</foreach>
	</insert>
	<!-- 	删除数据 -->
	<delete id="deleteCoupCate">
		DELETE FROM mtmydb.mtmy_coupon_category_mapping WHERE coupon_id=#{couponId}

	</delete>

</mapper>