<mapper namespace="com.training.modules.ec.dao.CategoryRecommendedDao">

	<sql id="CommentColumns">
		a.id,
		a.category_id AS categoryId,
		a.name,
		a.img_url  AS imgUrl,
		a.is_category_show AS isCategoryShow,
		a.is_mall_show AS isMallShow,
		a.sort
	</sql>
	
	<!-- 查询所有数据列表 -->
	<select id="findList" resultType="mtmyCategoryRecommended">
		SELECT
			<include refid="CommentColumns"/>
			<!-- b.name AS categoryName  -->
		FROM
			mtmydb.mtmy_category_recommended a <!-- LEFT JOIN mtmy_goods_category b ON a.category_id = b.category_id -->
		WHERE 1 = 1
			<!-- <if test="isCategoryShow != null and isCategoryShow != '' and isCategoryShow != '-1'">
				AND is_category_show = #{isCategoryShow}
			</if>  -->
		AND a.del_flag = 0
		ORDER BY
			a.sort DESC
	</select>
	
