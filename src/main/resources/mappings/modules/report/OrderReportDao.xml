<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.modules.report.dao.OrderReportDao">

	<sql id="sqlColumns">
		ordernum,
		amount,
		usernum,
		goodnum,
		totalmoney,
		addtime
	</sql>

	
	
	<select id="findOrderList" resultType="OrderReport">
		SELECT 
			<include refid="sqlColumns"></include>
		FROM mtmydb.order_report
		WHERE
		1=1 
		<if test="begtime != null and begtime != '' and endtime!=null and endtime!=''">
			and addtime BETWEEN #{begtime} and #{endtime}
		</if>
		 
	</select>
	

</mapper>